<resources>

  <style name="AppTheme.Launch" parent="AppTheme">
    <item name="android:statusBarColor">@color/colorLaunch</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="CollapsedAppBar.Title" parent="TextAppearance.MaterialComponents.Headline4">
    <item name="android:textColor">@color/colorWhite</item>
    <item name="android:shadowColor">@color/colorBlack</item>
    <item name="android:shadowDx">3</item>
    <item name="android:shadowDy">3</item>
    <item name="android:shadowRadius">2</item>
  </style>

  <style name="CollapsedAppBar.ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline5">
    <item name="android:textColor">@color/colorWhite</item>
  </style>

  <!-- ========================================================== -->
  <!--Sub themes and styles-->
  <style name="ShapeAppearance.SmallComponent.Cut" parent="ShapeAppearance.MaterialComponents.SmallComponent">
    <item name="cornerFamily">cut</item>
    <item name="cornerSize">4dp</item>
  </style>

  <style name="ShapeAppearance.MediumComponent.Cut" parent="ShapeAppearance.MaterialComponents.MediumComponent">
    <item name="cornerFamily">cut</item>
    <item name="cornerSize">8dp</item>
  </style>

  <style name="ShapeAppearance.LargeComponent.Cut" parent="ShapeAppearance.MaterialComponents.LargeComponent">
    <item name="cornerFamily">cut</item>
    <item name="cornerSize">12dp</item>
  </style>

  <style name="ShapeAppearance.SmallComponent.Round" parent="ShapeAppearance.MaterialComponents.SmallComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">4dp</item>
  </style>

  <style name="ShapeAppearance.MediumComponent.Round" parent="ShapeAppearance.MaterialComponents.MediumComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">8dp</item>
  </style>

  <style name="ShapeAppearance.LargeComponent.Round" parent="ShapeAppearance.MaterialComponents.LargeComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">12dp</item>
  </style>

  <style name="Widget.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
    <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.FloatingActionButton</item>
  </style>

  <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
    <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Button</item>
  </style>

  <style name="Widget.Chip" parent="Widget.MaterialComponents.Chip.Choice">
    <item name="chipCornerRadius">@null</item>
    <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Chip</item>
  </style>

  <style name="ShapeAppearanceOverlay.Chip" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">4dp</item>
  </style>

  <style name="Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

  <style name="Theme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
    <item name="bottomSheetStyle">@style/Widget.BottomSheet.Modal</item>
  </style>

  <style name="Theme.BottomSheetDialog.Round" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
    <item name="bottomSheetStyle">@style/Widget.BottomSheet.Modal.Round</item>
  </style>

  <style name="Widget.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
    <item name="android:background">?android:attr/colorBackground</item>
    <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.BottomSheet</item>
    <item name="backgroundTint">?attr/colorPrimary</item>
  </style>

  <style name="Widget.BottomSheet.Modal.Round" parent="Widget.MaterialComponents.BottomSheet.Modal">
    <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.BottomSheet.Round</item>
  </style>

  <style name="ShapeAppearanceOverlay.FloatingActionButton" parent="">
    <item name="cornerFamily">cut</item>
    <item name="cornerSize">@null</item>
  </style>

  <style name="ShapeAppearanceOverlay.Button" parent="">
    <item name="cornerFamily">cut</item>
    <item name="cornerSize">10dp</item>
  </style>

  <style name="ShapeAppearanceOverlay.BottomSheet" parent="">
    <item name="cornerSize">0dp</item>
    <item name="cornerFamilyTopRight">cut</item>
    <item name="cornerSizeTopRight">24dp</item>
  </style>

  <style name="ShapeAppearanceOverlay.BottomSheet.Round" parent="">
    <item name="cornerSize">0dp</item>
    <item name="cornerFamilyTopRight">rounded</item>
    <item name="cornerSizeTopRight">24dp</item>
  </style>

  <style name="TextAppearance.Typography.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
    <item name="fontFamily">@font/dosis</item>
    <item name="android:textAllCaps">true</item>

    <!--Other customizations also possible like this-->

    <!--<item name="android:textAllCaps">false</item>-->
    <!--<item name="android:textSize">64sp</item>-->
    <!--<item name="android:letterSpacing">0</item>-->
  </style>

  <style name="TextAppearance.Typography.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
    <item name="android:textAllCaps">true</item>
    <item name="fontFamily">@font/dosis</item>
  </style>

  <style name="TextAppearance.Typography.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
    <item name="android:textAllCaps">true</item>
    <item name="fontFamily">@font/dosis</item>
  </style>

  <style name="TextAppearance.Typography.Body1" parent="TextAppearance.MaterialComponents.Body1">
    <item name="fontFamily">@font/satisfy</item>
  </style>

  <style name="TextAppearance.Typography.Body2" parent="TextAppearance.MaterialComponents.Body2">
    <item name="fontFamily">@font/quicksand</item>
    <item name="android:textSize">16sp</item>
  </style>

</resources>
